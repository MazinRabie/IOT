@model IEnumerable<IOT.Models.Client>

@{
    ViewData["Title"] = "Clients";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-table"></i> Clients List</h2>
        <a class="btn btn-primary" asp-controller="Clients" asp-action="CreateClient">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>


    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                    <th>@Html.DisplayNameFor(model => model.First().role)</th>
                    <th>@Html.DisplayNameFor(model => model.First().status)</th>
                    <th>@Html.DisplayNameFor(model => model.First().TotalPrice)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in Model)
                {
                    <tr>
                        <td>@client.Id</td>
                        <td>@client.Name</td>
                        <td>@client.Email</td>
                        <td>@client.role</td>
                        <td>@client.status</td>
                        <td>@client.TotalPrice</td>
                        <td>
                            <a class="btn btn-sm btn-info text-white" asp-controller="Records" asp-action="getClientRecords" asp-route-rfid="@client.Id">Records</a>
                            <a class="btn btn-sm btn-warning text-dark" asp-controller="clients" asp-action="Edit" asp-route-id="@client.Id">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="clients" asp-action="DeleteClient" asp-route-id="@client.Id" onclick="return confirm('Are you sure you want to delete this record?');">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
