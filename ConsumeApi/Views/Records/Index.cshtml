@model IEnumerable<ConsumeApi.Models.RecordDto>

@{
    ViewData["Title"] = "Client records";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-table"></i> Records</h2>
    </div>

    <!-- 🔍 Search Form -->
    <form asp-controller="Records" asp-action="getClientRecords" method="get" class="row g-3 mb-4">
        <div class="col-md-4">
            <input type="text" name="rfid" class="form-control" placeholder="Search by RFID..." required />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-outline-primary w-100">Search</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-bordered table-striped table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                    <th>@Html.DisplayNameFor(model => model.First().RFID)</th>
                    <th>@Html.DisplayNameFor(model => model.First().EntranaceTime)</th>
                    <th>@Html.DisplayNameFor(model => model.First().ExitTime)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Price)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.RFID</td>
                        <td>@item.EntranaceTime.ToString("g")</td>
                        <td>@item.ExitTime.ToString("g")</td>
                        <td>@item.Price</td>
                        <td>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
